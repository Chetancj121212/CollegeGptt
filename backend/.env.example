# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Development/Production Mode
ENVIRONMENT=development

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here

# AstraDB Configuration
ASTRA_DB_API_ENDPOINT=https://your-database-region.apps.astra.datastax.com
ASTRA_DB_APPLICATION_TOKEN=your_astra_db_token_here
ASTRA_DB_COLLECTION_NAME=rag_chatbot_collection

# Clerk Authentication (required for production)
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Azure Blob Storage (optional - for file uploads)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string_here
AZURE_CONTAINER_NAME=your_container_name_here
